{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ES2020", "dom"],
    "types": [
      "cypress",
      "node",
      "@testing-library/cypress",
      "cypress-wait-until"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts"]
}
