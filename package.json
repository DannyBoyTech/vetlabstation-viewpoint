{
  "name": "viewpoint-parent",
  "private": true,
  "version": "0.0.58",
  "type": "module",
  "scripts": {
    "clean": "npm run clean --workspaces --if-present && npm run clean:self",
    "clean:self": "rimraf node_modules",
    "build-storybook": "storybook build",
    "storybook": "storybook dev -p 6006",
    "tsc": "tsc",
    "exporter": "npm run export -w @viewpoint/exporter",
    "ui": "npm run dev -w @viewpoint/ui",
    "server": "npm run dev -w @viewpoint/server",
    "app": "npm run build -w @viewpoint/ui && npm run build:dev -w @viewpoint/server && npm run start -w @viewpoint/app",
    "app:dev": "export VP_UI_URL=http://127.0.0.1:5173; npm run start -w @viewpoint/app",
    "dev": "concurrently -c \"red,blue,green,yellow\", -n api,server,ui,storybook \"npm -w @viewpoint/api run dev\" \"npm -w @viewpoint/server run dev\" \"npm -w @viewpoint/ui run dev -- --open\" \"npm run storybook\"",
    "build": "npm run build -w @viewpoint/api && npm run build -w @viewpoint/ui && npm run make:win32 -w @viewpoint/app",
    "build:win7": "npm run build -w @viewpoint/api && npm run build -w @viewpoint/ui && npm run build -w @viewpoint/server && npm run make:win32 -w @viewpoint/app-win7",
    "build:check": "npm run build:check --workspaces --if-present",
    "format": "prettier --write ./",
    "format:check": "prettier --check ./",
    "lint": "eslint . --report-unused-disable-directives ",
    "cypress:ui": "npm run cypress:ui -w @viewpoint/automation",
    "cypress:e2e": "npm run cypress:e2e -w @viewpoint/automation",
    "cypress:exports": "npm run cypress:exports -w @viewpoint/automation",
    "cypress:open": "npm run cypress:open -w @viewpoint/automation",
    "verify": "npx prettier --check . && npm run tsc --workspaces --if-present && npm run lint && npm run test --workspaces --if-present && npm run cypress:ui"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@storybook/addon-actions": "^8.2.5",
    "@storybook/addon-essentials": "^8.2.5",
    "@storybook/addon-links": "^8.2.5",
    "@storybook/cli": "^8.2.5",
    "@storybook/manager-api": "^8.2.5",
    "@storybook/node-logger": "^8.2.5",
    "@storybook/preview-api": "^8.2.5",
    "@storybook/react": "^8.2.5",
    "@storybook/react-vite": "^8.2.5",
    "@types/faker": "5.5.3",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "@vitejs/plugin-react": "4.2.1",
    "concurrently": "7.6.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "7.33.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "prettier": "2.8.3",
    "react-i18next": "^11.18.5",
    "react-router-dom": "6.8.1",
    "storybook": "^8.2.5",
    "ts-node": "10.9.1",
    "typescript": "^4.8.2",
    "vite": "5.2.7"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
